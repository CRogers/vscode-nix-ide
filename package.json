{
  "name": "nix-ide",
  "displayName": "Nix IDE",
  "description": "Nix language support with formatting and error report.",
  "version": "0.0.1",
  "publisher": "jnoortheen",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "bugs": {
    "url": "https://github.com/jnoortheen/vscode-nix-ide/issues"
  },
  "homepage": "https://github.com/jnoortheen/vscode-nix-ide",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnoortheen/vscode-nix-ide"
  },
  "contributes": {
    "languages": [
      {
        "id": "nix",
        "aliases": [
          "Nix",
          "nix"
        ],
        "extensions": [
          ".nix"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nix",
        "scopeName": "source.nix",
        "path": "./syntaxes/nix.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "^3.14.0",
    "standard-version": "^8.0.1"
  },
  "scripts": {
    "yml2json": "js-yaml syntaxes/nix.YAML-tmLanguage > syntaxes/nix.tmLanguage.json",
    "release": "yml2json && standard-version"
  }
}
